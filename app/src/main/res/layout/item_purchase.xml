<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginLeft="5dp"
            android:textSize="16sp"
            android:layout_gravity="center"
            android:layout_weight="2"
            android:text="采购明细"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/bt_purchase_delete"
            android:background="@null"
            android:textStyle="bold"
            android:textColor="@color/text_blue"
            android:layout_marginRight="5dp"
            android:textSize="16sp"
            android:text="删除"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
         android:orientation="horizontal"
         android:padding="10dp"
         android:layout_width="match_parent"
         android:layout_height="wrap_content">
         <TextView
             android:textSize="16sp"
             android:text="名称："
             android:layout_width="wrap_content"
             android:layout_height="wrap_content" />
         <EditText

             android:textSize="16sp"
             android:id="@+id/et_mingcheng"
             android:inputType="textMultiLine"
             android:layout_marginLeft="10dp"
             android:background="@null"
             android:hint="请输入采购名称"
             android:gravity="right"
             android:layout_weight="2"
             android:layout_width="match_parent"
             android:layout_height="wrap_content" />
     </LinearLayout>
    <View
        android:background="@color/linecolor"
        android:layout_width="match_parent"
        android:layout_height="2dp"/>
    <LinearLayout
        android:orientation="horizontal"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="16sp"
            android:text="型号："
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:textSize="16sp"
            android:id="@+id/et_xinghao"
            android:inputType="textMultiLine"
            android:layout_marginLeft="10dp"
            android:background="@null"
            android:hint="请输入采购型号"
            android:gravity="right"
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <View
        android:background="@color/linecolor"
        android:layout_width="match_parent"
        android:layout_height="2dp"/>
    <LinearLayout
        android:orientation="horizontal"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="16sp"
            android:text="数量："
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/et_shuliang"
            android:textSize="16sp"
            android:inputType="number"
            android:layout_marginLeft="10dp"
            android:background="@null"
            android:hint="请输入采购数量"
            android:gravity="right"
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <View
        android:background="@color/linecolor"
        android:layout_width="match_parent"
        android:layout_height="2dp"/>
    <LinearLayout
        android:orientation="horizontal"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="16sp"
            android:text="单价："
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/et_danjia"
            android:inputType="numberDecimal|number"
            android:layout_marginLeft="10dp"
            android:background="@null"
            android:hint="请输入采购单价"
            android:textSize="16sp"
            android:gravity="right"
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <View
        android:background="@color/linecolor"
        android:layout_width="match_parent"
        android:layout_height="2dp"/>
    <LinearLayout
        android:orientation="horizontal"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="16sp"
            android:text="金额："
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_jine"
            android:textSize="16sp"
            android:layout_marginLeft="10dp"
            android:background="@null"
            android:hint="自动生成"
            android:gravity="right"
            android:layout_weight="2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <View
        android:background="@color/linecolor"
        android:layout_width="match_parent"
        android:layout_height="2dp"/>
    <LinearLayout
        android:visibility="gone"
        android:id="@+id/ll_purchase_caigou"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="16sp"
                android:text="封装："
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/et_fengzhuang"
                android:inputType="textMultiLine"
                android:layout_marginLeft="10dp"
                android:background="@null"
                android:hint="请输入封装信息"
                android:textSize="16sp"
                android:gravity="right"
                android:layout_weight="2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <View
            android:background="@color/linecolor"
            android:layout_width="match_parent"
            android:layout_height="2dp"/>
        <LinearLayout
            android:orientation="horizontal"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="16sp"
                android:text="品牌："
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/et_pinpai"
                android:inputType="textMultiLine"
                android:layout_marginLeft="10dp"
                android:background="@null"
                android:hint="请输入品牌信息"
                android:textSize="16sp"
                android:gravity="right"
                android:layout_weight="2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <View
            android:background="@color/linecolor"
            android:layout_width="match_parent"
            android:layout_height="2dp"/>
        <LinearLayout
            android:orientation="horizontal"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="16sp"
                android:text="分类："
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/et_fenlei"
                android:inputType="textMultiLine"
                android:layout_marginLeft="10dp"
                android:background="@null"
                android:hint="请输入分类信息"
                android:textSize="16sp"
                android:gravity="right"
                android:layout_weight="2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <View
            android:background="@color/linecolor"
            android:layout_width="match_parent"
            android:layout_height="2dp"/>
        <LinearLayout
            android:orientation="horizontal"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="16sp"
                android:text="联系人："
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/et_lianxiren"
                android:inputType="textMultiLine"
                android:layout_marginLeft="10dp"
                android:background="@null"
                android:hint="请输入联系人"
                android:textSize="16sp"
                android:gravity="right"
                android:layout_weight="2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <View
            android:background="@color/linecolor"
            android:layout_width="match_parent"
            android:layout_height="2dp"/>
        <LinearLayout
            android:orientation="horizontal"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="16sp"
                android:text="联系电话："
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/et_dianhua"
                android:inputType="number"
                android:layout_marginLeft="10dp"
                android:background="@null"
                android:hint="请输入联系电话"
                android:textSize="16sp"
                android:gravity="right"
                android:layout_weight="2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <View
            android:background="@color/linecolor"
            android:layout_width="match_parent"
            android:layout_height="2dp"/>

    </LinearLayout>



    <LinearLayout
        android:id="@+id/ll_piaoju"
        android:orientation="horizontal"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="16sp"
            android:text="票据类型："
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/et_piaoju"
            android:textSize="16sp"
            android:inputType="textMultiLine"
            android:layout_marginLeft="10dp"
            android:background="@null"
            android:hint="请输入采购票据"
            android:gravity="right"
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <View
        android:background="@color/linecolor"
        android:layout_width="match_parent"
        android:layout_height="2dp"/>
    <LinearLayout
        android:id="@+id/ll_beizhu"
        android:orientation="horizontal"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="16sp"
            android:text="备注："
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/et_beizhu"
            android:textSize="16sp"
            android:inputType="textMultiLine"
            android:layout_marginLeft="10dp"
            android:background="@null"
            android:hint="请输入采购用途"
            android:gravity="right"
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <View
        android:background="@color/linecolor"
        android:layout_width="match_parent"
        android:layout_height="2dp"/>
    <LinearLayout
        android:orientation="horizontal"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="16sp"
            android:text="用途说明："
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/et_yongtu"
            android:textSize="16sp"
            android:inputType="textMultiLine"
            android:layout_marginLeft="10dp"
            android:background="@null"
            android:hint="请输入采购用途"
            android:gravity="right"
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <View
        android:background="@color/linecolor"
        android:layout_width="match_parent"
        android:layout_height="20dp"/>

</LinearLayout>