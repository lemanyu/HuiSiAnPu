<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v7.widget.Toolbar
            app:titleTextColor="@color/text_blue"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@android:color/white"
            android:theme="@style/ToolBarTheme"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:layout_scrollFlags="scroll|enterAlways|snap">
            <ImageButton
                android:id="@id/back"
                android:layout_width="30dp"
                android:background="@drawable/back"
                android:layout_height="25dp" />
            <TextView
                android:id="@+id/tv_details_title"
                android:textSize="20sp"
                android:layout_gravity="center_horizontal"
                android:text="工作日报"
                style="@style/CommonText" />
        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.zhy.android.percent.support.PercentLinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
         <LinearLayout
             android:id="@+id/ll_details_day"
             android:orientation="vertical"
             android:layout_width="match_parent"
             android:layout_height="wrap_content">
             <TextView
                 android:textSize="18sp"
                 android:textStyle="bold"
                 android:layout_margin="5dp"
                 android:text="今日完成工作："
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content" />
             <TextView
                 android:id="@+id/tv_details_day_finish"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:background="@null"
                 android:gravity="left|top"
                 android:inputType="textMultiLine"
                 android:minLines="10"
                 android:padding="10dp"
                 android:textStyle="bold" />
             <View
                 android:background="@color/linecolor"
                 android:layout_width="match_parent"
                 android:layout_height="2dp"></View>
         </LinearLayout>
         <LinearLayout
               android:orientation="vertical"
               android:id="@+id/ll_details_week"
               android:layout_width="match_parent"
               android:layout_height="wrap_content">
               <TextView
                   android:textSize="18sp"
                   android:textStyle="bold"
                   android:layout_margin="5dp"
                   android:text="本周工作总结："
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content" />
               <TextView
                   android:id="@+id/tv_details_week_summary"
                   android:textStyle="bold"
                   android:gravity="left|top"
                   android:minLines="5"
                   android:inputType="textMultiLine"
                   android:padding="10dp"
                   android:background="@null"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content" />
               <View
                   android:background="@color/linecolor"
                   android:layout_width="match_parent"
                   android:layout_height="2dp"></View>
               <TextView
                   android:textSize="18sp"
                   android:textStyle="bold"
                   android:layout_margin="5dp"
                   android:text="下周工作计划："
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content" />
               <TextView
                   android:id="@+id/tv_details_week_plan_next"
                   android:textStyle="bold"
                   android:gravity="left|top"
                   android:minLines="5"
                   android:inputType="textMultiLine"
                   android:padding="10dp"
                   android:background="@null"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content" />
               <View
                   android:background="@color/linecolor"
                   android:layout_width="match_parent"
                   android:layout_height="2dp"></View>
               <TextView
                   android:textSize="18sp"
                   android:textStyle="bold"
                   android:layout_margin="5dp"
                   android:text="需协调与帮助："
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content" />
               <TextView
                   android:id="@+id/tv_details_week_coordination"
                   android:textStyle="bold"
                   android:gravity="left|top"
                   android:minLines="5"
                   android:inputType="textMultiLine"
                   android:padding="10dp"
                   android:background="@null"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content" />
               <View
                   android:background="@color/linecolor"
                   android:layout_width="match_parent"
                   android:layout_height="2dp"></View>
           </LinearLayout>
         <LinearLayout
                android:id="@+id/ll_details_month"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_margin="5dp"
                    android:text="本月工作总结："
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tv_details_month_summary"
                    android:gravity="left|top"
                    android:minLines="5"
                    android:inputType="textMultiLine"
                    android:padding="10dp"
                    android:background="@null"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <View
                    android:background="@color/linecolor"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"></View>
                <TextView
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_margin="5dp"
                    android:text="下月工作计划："
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                   android:id="@+id/tv_details_month_plan"
                    android:textStyle="bold"
                    android:gravity="left|top"
                    android:minLines="5"
                    android:inputType="textMultiLine"
                    android:padding="10dp"
                    android:background="@null"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <View
                    android:background="@color/linecolor"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"></View>
                <TextView
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_margin="5dp"
                    android:text="需帮助与支持："
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tv_details_month_coordination"
                    android:gravity="left|top"
                    android:minLines="5"
                    android:inputType="textMultiLine"
                    android:padding="10dp"
                    android:background="@null"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <View
                    android:background="@color/linecolor"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"></View>


            </LinearLayout>


        </com.zhy.android.percent.support.PercentLinearLayout>
    </android.support.v4.widget.NestedScrollView>

</LinearLayout>